@{
    ViewBag.title = "Remove Menu";
}

<h1>@ViewBag.title</h1>


<form method="post">

    @foreach (var menu in ViewBag.menus)
    {
        <input type="radio" name="menuId" id="@menu.ID" value="@menu.ID" />
        <label for="@menu.ID">@menu.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Menu" />
</form>