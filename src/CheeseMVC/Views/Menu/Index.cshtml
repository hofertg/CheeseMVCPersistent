@{
    ViewBag.title = "Menus";
}
@model List<CheeseMVC.Models.Menu>

<h1>@ViewBag.title</h1>


@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}
else
{
    <ul>
        @foreach (var menu in Model)
        {
            <li><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></li>
        }
    </ul>
}




<p><a asp-controller="Menu" asp-action="Add">Add Menu</a> | <a asp-controller="Menu" asp-action="Remove">Remove Menu</a></p>
