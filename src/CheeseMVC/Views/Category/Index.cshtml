@{
    ViewBag.title = "Categories";
}
@model List<CheeseMVC.Models.CheeseCategory>

<h1>@ViewBag.title</h1>


@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}
else
{
    <ul>
        @foreach (var category in Model)
        {
            <li><a asp-controller="Category" asp-action="ViewCategory" asp-route-id="@category.ID">@category.Name</a></li>
        }
    </ul>
}
    



<p><a asp-controller="Category" asp-action="Add">Add Category</a> | <a asp-controller="Category" asp-action="Remove">Remove Category</a></p>
